@{
    ViewData["Title"] = "Weather";
}

<h2>Weather</h2>

<form method="post" action="@Url.Action("GetWeather", "Weather")">
    <label for="location">Enter your location:</label>
    <input type="text" id="location" name="location" required />
    <input type="submit" value="Get Weather" />
</form>

@if (Model != null)
{
    <h3>Weather in @Model.Name:</h3>
    <p>Temperature: @Model.Main.Temp &deg;C</p>
    <p>Humidity: @Model.Main.Humidity %</p>
   //<p>Condition: @Model.Weather.FirstOrDefault()?.Description</p>
  

    <p>Wind Speed: @Model.Wind.Speed m/s</p>
}
else
{
    <p>No weather data available for the specified location.</p>
}
